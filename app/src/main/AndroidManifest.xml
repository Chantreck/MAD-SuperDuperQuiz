<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chantreck.superduperquiz">

    <application
        android:allowBackup="true"
        android:name=".MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperDuperQuiz">
        <activity
            android:name=".ui.sign_up.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.sign_in.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".ui.authorization.AuthorizationActivity"
            android:exported="true"
            android:theme="@style/Theme.SuperDuperQuiz.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>