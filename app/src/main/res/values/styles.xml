<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="Text.H1">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/h1</item>
    </style>

    <style name="Text.H2">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <style name="Text.H3">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="Text.H4">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/h4</item>
    </style>

    <style name="Text.Subtext">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/subtext</item>
    </style>

    <style name="Text.Additional">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/additional</item>
    </style>

    <style name="Text.Small">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="Text.Error">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/error</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">@dimen/secondary_button</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ToolbarLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Toolbar">
        <item name="titleTextAppearance">@style/Text.H1</item>
        <item name="titleTextColor">@color/accent_800</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Toolbar.Back">
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="navigationIconTint">@color/accent_600</item>
    </style>

    <style name="Input_Layout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorTextAppearance">@style/Text.Error</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Input_EditText">
        <item name="android:background">@drawable/shape_input</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemTextAppearanceActive">@style/BottomNavigationLabel</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationLabel</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="BottomNavigationLabel">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/bottom_navigation_label</item>
    </style>
</resources>