<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperDuperQuiz" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_600</item>
        <item name="colorPrimaryVariant">@color/accent_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_400</item>
        <item name="colorSecondaryVariant">@color/accent_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.SuperDuperQuiz.SplashScreen">
        <item name="android:background">@drawable/splash_screen</item>
    </style>
</resources>